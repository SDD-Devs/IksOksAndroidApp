<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".IksOksLogic.main_page.activities.MainActivity"
    android:orientation="vertical">

    <ImageButton
        android:id="@+id/settingsButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="fitCenter"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:background="#0000"
        android:onClick="openSettingsActivity"
        app:srcCompat="@drawable/settingsicon" />

    <Button
        android:id="@+id/classicButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="50dp"
        android:background="#584473"
        android:fontFamily="@font/roboto_medium"
        android:onClick="onButtonClassicClick"
        android:text="CLASSIC"
        android:textSize="20dp"/>


    <Button
        android:id="@+id/blueButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="50dp"
        android:background="#584473"
        android:fontFamily="@font/roboto_medium"
        android:onClick="onButtonBluetoothClick"
        android:text="BLUETOOTH"
        android:textSize="20sp"
        />

    <Button
        android:id="@+id/customButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="50dp"
        android:background="#584473"
        android:fontFamily="@font/roboto_medium"
        android:onClick="onButtonNetworkClick"
        android:text="Network"
        android:textSize="20sp"
        />



</LinearLayout>