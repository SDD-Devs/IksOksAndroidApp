<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".IksOksLogic.pages.BluetoothActivity"
    android:orientation="vertical">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:text="Bluetooth Setup"
        android:textAlignment="center"
        android:layout_marginTop="50dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnOnOff"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#584473"
            android:fontFamily="@font/roboto_medium"
            android:text="ON/OFF"
            android:textSize="15sp"
            android:layout_weight="1"
            android:layout_marginLeft="20dp"/>


        <Button
            android:id="@+id/btnDiscoverability"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#584473"
            android:fontFamily="@font/roboto_medium"
            android:text="Discoverability"
            android:textSize="15sp"
            android:layout_weight="1"
            android:layout_marginRight="20dp"
            />
    </LinearLayout>



    <ListView
        android:id="@+id/lstAvailableDevices"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="20dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnDiscover"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#584473"
            android:fontFamily="@font/roboto_medium"
            android:text="Discover"
            android:textSize="15sp"
            android:layout_marginLeft="20dp"/>


        <Button
            android:id="@+id/btnInitiateConnection"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#584473"
            android:fontFamily="@font/roboto_medium"
            android:text="Start The Game"
            android:textSize="15sp"
            android:layout_marginRight="15dp"
            />


    </LinearLayout>

    <Button
        android:id="@+id/btnSend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SEND COmmand"/>


</LinearLayout>